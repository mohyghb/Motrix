<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/LetsTryAgainBtnManual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/operationbtn"
        android:text="Let's try again !"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/YupBtnManual"
        app:layout_constraintStart_toEndOf="@+id/CancelBtnManual" />

    <Button
        android:id="@+id/YupBtnManual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/operationbtn"
        android:text="Yup!"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/LetsTryAgainBtnManual" />

    <Button
        android:id="@+id/CancelBtnManual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/operationbtn"
        android:text="Cancel"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/LetsTryAgainBtnManual"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/MessageManual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Message"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/LetsTryAgainBtnManual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>